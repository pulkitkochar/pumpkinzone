        <div class="pull-right">
          <div class="">
            <i class="fa fa-fax" aria-hidden="true"></i>
            <a href="#" class="color-white">+91-1676-220738</a>
          </div>
          <div class="email-details">
            <i class="fa fa-envelope-o" aria-hidden="true"></i>
            <a href="#" class="color-white">info@pumpkinzone.in</a>
          </div>
          <div class="">
            <i class="fa fa-mobile" aria-hidden="true"></i>
            <a href="#" class="color-white">+91-921-7867546</a>
          </div>
        </div>
      </div>
    </div>

    <div class= "row-fluid">

      <ul class="nav nav-tabs custom">
        <li><a href="" id="home">Home</a></li>
        <li><a href="" id="about_pumpkin">About Pumpkin</a></li>
        <li><a href="" id="our_products">Our Products</a></li>
        <li><a href="" id="certificates">Certificates</a></li>
        <li><a href="" id="contact_us">Contact Us</a></li>
        <li><a href="" id="useful_links">Useful Links</a></li>
        <li><a href="" id="downloads">Downloads</a></li>
      </ul>
    </div>

    <div class= "row-fluid">
      <%= yield%>
    </div>

    <div class= "row-fluid footer" style="height: 100%">
      <div><div><h2 style="margin-top: 0px">Connect with us</h2></div>
        <div>
         <span><i class="fa fa-facebook-square fa-3x" aria-hidden="true"></i></span>
        <span><i class="fa fa-twitter-square fa-3x" aria-hidden="true"></i></span>
        <span><i class="fa fa-youtube-square fa-3x" aria-hidden="true"></i></span>
        <span><i class="fa fa-pinterest-square fa-3x" aria-hidden="true"></i></span>
        </div>
      </div>
      <div class="">Copyright @ Pumpkinzone
      </div>
    </div>
  </div>

  <div class="span1"></div>
</div>

