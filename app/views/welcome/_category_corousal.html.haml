.row.type
  %span.h2
    = products_with_category.keys.first['name']
  %span
    %a.see_more See more
.row
  %div.carousel.slide{id: "myCarousel#{products_with_category.keys.first['id']}"}
    / Indicators
    %ol.carousel-indicators
      %li.active{"data-slide-to" => "0", "data-target" => "#myCarousel#{products_with_category.keys.first['id']}"}
      %li{"data-slide-to" => "1", "data-target" => "#myCarousel#{products_with_category.keys.first['id']}"}
      %li{"data-slide-to" => "2", "data-target" => "#myCarousel#{products_with_category.keys.first['id']}"}
    .carousel-inner
      - products_with_category.values.first.each_slice(4).to_a.each_with_index do |products, i|
        = render "products", products: products, class_active: i == 0 ? 'active' : ''

    %a.left.carousel-control-new{"data-slide" => "prev", :href => "#myCarousel#{products_with_category.keys.first['id']}"}
      %span.glyphicon.glyphicon-chevron-left
      %span.sr-only Previous
    %a.right.carousel-control-new{"data-slide" => "next", :href => "#myCarousel#{products_with_category.keys.first['id']}"}
      %span.glyphicon.glyphicon-chevron-right
      %span.sr-only Next
/ /.carousel

%hr.type